<BorderPane maxHeight="1080.0" maxWidth="1920.0" minHeight="500.0" minWidth="800.0" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.um.tds.cuentaConmigo.HomeController">

    <!-- Barra superior -->
    <top>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="100.0" prefHeight="100.0" prefWidth="1120.0" vgap="50.0" BorderPane.alignment="CENTER">
            <children>
                <Button prefHeight="40.0" prefWidth="100.0" text="Home">
                    <font><Font size="18.0" /></font>
                </Button>
                <Button onAction="#switchToEstadisticas" prefHeight="40.0" prefWidth="150.0" text="Estadísticas">
                    <font><Font size="18.0" /></font>
                </Button>
                <Button onAction="#switchToCuentasCompartidas" prefHeight="40.0" prefWidth="200.0" text="Cuentas compartidas">
                    <font><Font size="18.0" /></font>
                </Button>
            </children>
        </FlowPane>
    </top>

    <!-- Contenido principal -->
    <center>
        <FlowPane alignment="TOP_CENTER" orientation="VERTICAL" prefWrapLength="266.0" BorderPane.alignment="CENTER">
         <children>
            <Pane prefHeight="200.0" prefWidth="768.0">
               <children>
                  <Label contentDisplay="CENTER" layoutX="302.0" layoutY="131.0" text="Añade un gasto">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="567.0">
                     <children>
                        <Label text="Cantidad">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <TextField>
                           <VBox.margin>
                              <Insets left="40.0" right="40.0" top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="538.0">
                     <children>
                        <Label text="Categoría">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <SplitMenuButton mnemonicParsing="false" text="SplitMenuButton">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Action 1" />
                            <MenuItem mnemonicParsing="false" text="Action 2" />
                          </items>
                           <font>
                              <Font size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </SplitMenuButton>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="TOP_CENTER" prefHeight="279.0" prefWidth="728.0">
               <children>
                  <Label text="Descripción">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <TextArea prefHeight="200.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
               <FlowPane.margin>
                  <Insets left="20.0" right="20.0" />
               </FlowPane.margin>
            </VBox>
            <HBox alignment="CENTER" prefHeight="96.0" prefWidth="768.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Fecha" />
                        <DatePicker />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button mnemonicParsing="false" text="Button" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
        </FlowPane>
    </center>

    <!-- Zona izquierda (Historial + Configurar límite) -->
    <left>
      <AnchorPane prefHeight="980.0" prefWidth="573.0" BorderPane.alignment="CENTER">
         <children>
              <GridPane maxWidth="576.0" minWidth="266.0" prefWidth="576.0" vgap="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <rowConstraints>
                      <RowConstraints percentHeight="50" vgrow="ALWAYS" />
                      <RowConstraints percentHeight="35" vgrow="ALWAYS" />
                  </rowConstraints>
                  <padding>
                      <Insets bottom="10" left="15" right="15" top="10" />
                  </padding>
      
                  <children>
                      <!-- Bloque HISTORIAL -->
                      <VBox alignment="TOP_CENTER" prefWidth="576.0" spacing="20.0" GridPane.rowIndex="0" VBox.vgrow="ALWAYS">
                          <Label text="HISTORIAL">
                              <font>
                           <Font size="16.0" />
                        </font>
                          </Label>
                          <ScrollPane fitToHeight="true" fitToWidth="true" vbarPolicy="ALWAYS" VBox.vgrow="ALWAYS">
                              <content>
                                  <ListView minHeight="1000.0" prefHeight="1000.0" />
                              </content>
                          </ScrollPane>
                      </VBox>
      
                      <!-- Bloque CONFIGURAR LÍMITE -->
                      <VBox alignment="CENTER" spacing="50.0" GridPane.rowIndex="1" VBox.vgrow="ALWAYS">
                          <Label text="Configurar límite">
                              <font>
                           <Font size="16.0" />
                        </font>
                          </Label>
      
                          <GridPane alignment="CENTER" hgap="20.0" vgap="20.0">
                              <columnConstraints>
                                  <ColumnConstraints hgrow="ALWAYS" />
                                  <ColumnConstraints hgrow="ALWAYS" />
                              </columnConstraints>
                              <rowConstraints>
                                  <RowConstraints vgrow="SOMETIMES" />
                                  <RowConstraints vgrow="SOMETIMES" />
                              </rowConstraints>
      
                              <!-- Categoría -->
                              <VBox alignment="TOP_CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                  <Label text="Categoría">
                                      <font>
                                 <Font size="14.0" />
                              </font>
                                      <VBox.margin>
                                 <Insets bottom="10.0" />
                              </VBox.margin>
                                  </Label>
                                  <SplitMenuButton text="Seleccionar">
                                      <items>
                                          <MenuItem text="Opción 1" />
                                          <MenuItem text="Opción 2" />
                                      </items>
                                  </SplitMenuButton>
                              </VBox>
      
                              <!-- Fecha -->
                              <VBox alignment="TOP_CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                  <Label text="Fecha">
                                      <font>
                                 <Font size="14.0" />
                              </font>
                                      <VBox.margin>
                                 <Insets bottom="10.0" />
                              </VBox.margin>
                                  </Label>
                                  <DatePicker />
                              </VBox>
      
                              <!-- Cantidad -->
                              <VBox alignment="TOP_CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                  <Label text="Cantidad">
                                      <font>
                                 <Font size="14.0" />
                              </font>
                                      <VBox.margin>
                                 <Insets bottom="10.0" />
                              </VBox.margin>
                                  </Label>
                                  <TextField />
                              </VBox>
      
                              <!-- Botón + -->
                              <StackPane alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                  <Button prefHeight="60" prefWidth="60" text="+">
                                      <font>
                                 <Font size="24.0" />
                              </font>
                                  </Button>
                              </StackPane>
                          </GridPane>
                      </VBox>
                  </children>
               <columnConstraints>
                  <ColumnConstraints />
               </columnConstraints>
              </GridPane>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </AnchorPane>
    </left>

    <!-- Zona derecha -->
    <right>
        <FlowPane alignment="CENTER" prefWidth="573.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Sec3" />
            </children>
        </FlowPane>
    </right>

